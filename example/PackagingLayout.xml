<PackagingLayout xmlns="http://schemas.microsoft.com/appx/makeappx/2017">
  <PackageFamily ID="ros-distribution-desktop" FlatBundle="true" ManifestPath="example\appxmanifest.xml" ResourceManager="false">
    
    <!-- x64 code package-->
    <Package ID="x64" ProcessorArchitecture="x64">
      <Files>
        <File DestinationPath="_resources\**" SourcePath="_resources\**"/>
        <File DestinationPath="VFS\Common AppData\**" SourcePath="working\**"/>
        <File DestinationPath="Launcher.bat" SourcePath="example\Launcher.bat"/>
        <File DestinationPath="Launcher.exe" SourcePath="Launcher\x64\Release\Launcher.exe"/>
      </Files>
    </Package>

  </PackageFamily>
</PackagingLayout>